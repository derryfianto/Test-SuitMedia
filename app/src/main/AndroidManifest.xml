<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user.myapplication" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Screen2Activity"
            android:label="@string/title_activity_screen2"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.user.myapplication.MainActivity" />
        </activity>
        <activity
            android:name=".Screen3Activity"
            android:label="@string/title_activity_screen3"
            android:parentActivityName=".Screen2Activity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.user.myapplication.Screen2Activity" />
        </activity>
        <activity
            android:name=".Screen4Activity"
            android:label="@string/title_activity_screen4"
            android:parentActivityName=".Screen2Activity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.user.myapplication.Screen2Activity" />
        </activity>
    </application>

</manifest>
