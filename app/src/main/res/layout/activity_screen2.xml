<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.user.myapplication.Screen2Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/label_nama"
        android:id="@+id/textView"
        android:layout_marginTop="110dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/buttonPilihEvent"
        android:layout_toStartOf="@+id/buttonPilihEvent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textViewNama"
        android:layout_alignTop="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_event"
        android:id="@+id/buttonPilihEvent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="getEvent"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_guest"
        android:id="@+id/buttonPilihGuest"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/buttonPilihEvent"
        android:layout_centerHorizontal="true"
        android:onClick="getGuest"/>
</RelativeLayout>
